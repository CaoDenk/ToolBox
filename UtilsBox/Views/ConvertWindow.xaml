<Window x:Class="UtilsBox.Views.ConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilsBox.Views"
        mc:Ignorable="d"
        Title="ConvertWindow" Height="450" Width="800" Icon="/Resources/转换.png">
    <StackPanel>
      
        <TextBox AcceptsReturn="True" MinHeight="80" x:Name="Input" Margin="0,5,0,0"/>
        <TextBox AcceptsReturn="True" MinHeight="80" x:Name="Result" Margin="0,5,0,0" />
        <WrapPanel Margin="2" Height="40">
            <Button Click="Button_Click"  Margin="2" Height="30" Width="100">转换</Button>
            <Button Click="Clear"  Margin="10,0,0,0" Height="30" Width="100">清除</Button>
        </WrapPanel>
        <TextBlock x:Name="Display"  HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
