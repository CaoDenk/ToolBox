<Window x:Class="UtilsBox.Views.ImgMaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilsBox.Views"
        mc:Ignorable="d"
       
        Title="ImgMaskWindow" Height="800" Width="1600">
    <StackPanel>
        <WrapPanel>
            <Button Margin="2" Click="OpenImg">打开图片</Button>
            <Button Margin="2" Click="SaveImg">保存图片</Button>
        </WrapPanel>
       
        <WrapPanel>

            <!--<Grid Width="500">
             
            </Grid>-->
            <Image x:Name="Img" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="400" />


            <Image x:Name="Mask" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" MouseLeftButtonDown="Mask_MouseLeftButtonDown"  MouseRightButtonDown="Mask_MouseRightButtonDown"/>

        </WrapPanel>
    </StackPanel>

</Window>
