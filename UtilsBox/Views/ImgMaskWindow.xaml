<Window x:Class="UtilsBox.Views.ImgMaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilsBox.Views"
        mc:Ignorable="d"
        Title="ImgMaskWindow" Height="450" Width="1200">
    <StackPanel>
        <WrapPanel>
            <!--<Grid Width="500">
             
            </Grid>-->
            <Image x:Name="Img" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="400" />
            <StackPanel x:Name="CheckBoxStack" Width="100">
                <!--<CheckBox>复选框</CheckBox>
            <CheckBox>复选框</CheckBox>-->

            </StackPanel>
            <StackPanel x:Name="MaskOperation" >
                <Button Click="OpenImg" Margin="10">打开图片</Button>
                <Button Click="ChooseDirectory" Margin="10">打开mask文件夹</Button>
                <!--<Button Click="MaskOp">mask</Button>-->
            </StackPanel>
        </WrapPanel>
        <Image x:Name="Mask" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" MouseLeftButtonDown="Mask_MouseLeftButtonDown" />
        <!--<Rectangle Width="200" Height="200"  Fill="AliceBlue"  MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"/>-->
    </StackPanel>
</Window>
