<Window x:Class="ToolBox.Views.RectifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolBox.Views"
        mc:Ignorable="d"
        Title="RectifyWindow" Height="800" Width="800">
    <StackPanel>
        <WrapPanel>
            <Button Click="OpenImg" Width="400">选择图片</Button>
            <Button Click="SaveImg" Width="400">保存图片</Button>
        </WrapPanel>
        <Image x:Name="Img"  MouseWheel="Zoomin"/>
    </StackPanel>
</Window>
